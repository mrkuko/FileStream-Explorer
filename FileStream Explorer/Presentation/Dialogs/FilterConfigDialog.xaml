<Window x:Class="FileStream_Explorer.FilterConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filter Configuration" 
        Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="Configure Filter Operation" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="Name Filter" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Pattern:" Width="120" VerticalAlignment="Center"/>
                            <TextBox x:Name="NamePatternTextBox" Width="300"/>
                        </StackPanel>
                        
                        <CheckBox x:Name="UseRegexCheckBox" 
                                Content="Use regular expression" 
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>
                
                <GroupBox Header="Extension Filter" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <TextBlock Text="Extensions (comma-separated):" Margin="0,0,0,5"/>
                        <TextBox x:Name="ExtensionsTextBox" 
                               Text=""
                               ToolTip="e.g., .txt, .pdf, .docx"/>
                        <TextBlock Text="Leave empty to include all extensions" 
                                 FontStyle="Italic" 
                                 Foreground="Gray" 
                                 Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>
                
                <GroupBox Header="Size Filter" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Min size (bytes):" Width="120" VerticalAlignment="Center"/>
                            <TextBox x:Name="MinSizeTextBox" Width="150"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Max size (bytes):" Width="120" VerticalAlignment="Center"/>
                            <TextBox x:Name="MaxSizeTextBox" Width="150"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
                <GroupBox Header="Date Filter" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Min date:" Width="120" VerticalAlignment="Center"/>
                            <DatePicker x:Name="MinDatePicker" Width="200"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Max date:" Width="120" VerticalAlignment="Center"/>
                            <DatePicker x:Name="MaxDatePicker" Width="200"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
                <GroupBox Header="Other Options" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="IncludeDirectoriesCheckBox" 
                                Content="Include directories in filter" 
                                IsChecked="True"
                                Margin="0,5"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="OK" 
                    Width="80" 
                    Margin="5" 
                    IsDefault="True" 
                    Click="OK_Click"/>
            <Button Content="Cancel" 
                    Width="80" 
                    Margin="5" 
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
