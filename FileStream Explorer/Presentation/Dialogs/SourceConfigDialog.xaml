<Window x:Class="FileStream_Explorer.SourceConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Source Configuration" 
        Height="380" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        MinHeight="320" MinWidth="450">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="Configure Source Operation" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="Source Directory" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Directory:" Width="100" VerticalAlignment="Center"/>
                            <TextBox x:Name="SourceDirectoryTextBox" Width="270"/>
                            <Button Content="..." Width="30" Margin="5,0,0,0" Click="Browse_Click"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <TextBlock Text="File pattern:" Width="100" VerticalAlignment="Center"/>
                            <TextBox x:Name="FilePatternTextBox" Width="150" Text="*.*"/>
                            <TextBlock Text="(e.g., *.txt, *.jpg)" Foreground="Gray" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
                <GroupBox Header="Options" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="IncludeSubdirectoriesCheckBox" 
                                  Content="Include subdirectories" 
                                  Margin="0,5"/>
                        <CheckBox x:Name="MergeWithExistingCheckBox" 
                                  Content="Merge with existing files in stream (keep + add new)" 
                                  IsChecked="True"
                                  Margin="0,5"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="OK" 
                    Width="80" 
                    Margin="5" 
                    IsDefault="True" 
                    Click="OK_Click"/>
            <Button Content="Cancel" 
                    Width="80" 
                    Margin="5" 
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
