<Window x:Class="FileStream_Explorer.RenameConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rename Configuration" 
        Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="Configure Rename Operation" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="Basic Transformations" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Prefix:" Width="120" VerticalAlignment="Center"/>
                            <TextBox x:Name="PrefixTextBox" Width="300"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Suffix:" Width="120" VerticalAlignment="Center"/>
                            <TextBox x:Name="SuffixTextBox" Width="300"/>
                        </StackPanel>
                        
                        <CheckBox x:Name="PreserveExtensionCheckBox" 
                                Content="Preserve file extension" 
                                IsChecked="True" 
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>
                
                <GroupBox Header="Find and Replace" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Find:" Width="120" VerticalAlignment="Center"/>
                            <TextBox x:Name="FindTextBox" Width="300"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Replace with:" Width="120" VerticalAlignment="Center"/>
                            <TextBox x:Name="ReplaceTextBox" Width="300"/>
                        </StackPanel>
                        <CheckBox x:Name="UseRegexCheckBox"
                                  Content="Use regular expression for find/replace"
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                </GroupBox>
                
                <GroupBox Header="Sequential Numbering" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="UseNumberingCheckBox" 
                                Content="Add sequential numbers" 
                                Margin="0,0,0,10"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5" 
                                  IsEnabled="{Binding IsChecked, ElementName=UseNumberingCheckBox}">
                            <TextBlock Text="Start number:" Width="120" VerticalAlignment="Center"/>
                            <TextBox x:Name="StartNumberTextBox" Width="100" Text="1"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5"
                                  IsEnabled="{Binding IsChecked, ElementName=UseNumberingCheckBox}">
                            <TextBlock Text="Padding (digits):" Width="120" VerticalAlignment="Center"/>
                            <TextBox x:Name="NumberPaddingTextBox" Width="100" Text="3"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
                <GroupBox Header="Additional Options" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="NormalizeSpacesCheckBox" 
                                Content="Normalize spaces (remove extra spaces)" 
                                Margin="0,5"/>
                        <CheckBox x:Name="KeepCoreNameCheckBox"
                                  Content="Keep core of original file name"
                                  IsChecked="True"
                                  Margin="0,5"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="Case transform:" Width="120" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CaseTransformComboBox" Width="200" SelectedIndex="0">
                                <ComboBoxItem Content="None"/>
                                <ComboBoxItem Content="UPPERCASE"/>
                                <ComboBoxItem Content="lowercase"/>
                                <ComboBoxItem Content="Title Case"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="OK" 
                    Width="80" 
                    Margin="5" 
                    IsDefault="True" 
                    Click="OK_Click"/>
            <Button Content="Cancel" 
                    Width="80" 
                    Margin="5" 
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
