<Window x:Class="FileStream_Explorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileStream_Explorer"
        xmlns:converters="clr-namespace:FileStream_Explorer.Presentation.Converters"
        mc:Ignorable="d"
        Title="FileStream Explorer - Batch File Operations" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <converters:FileSizeConverter x:Key="FileSizeConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:FileIconConverter x:Key="FileIconConverter"/>
        
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="HeaderText">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <TextBlock Grid.Row="0" 
                   Text="FileStream Explorer" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>
        
        <!-- Navigation Bar -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Content="⬆ Up" 
                        Command="{Binding NavigateUpCommand}"
                        ToolTip="Navigate to parent directory"/>
                <Button Content="🔄 Refresh" 
                        Command="{Binding RefreshCommand}"
                        ToolTip="Refresh current directory"/>
            </StackPanel>
            
            <TextBox Grid.Column="1" 
                     Text="{Binding CurrentDirectory, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="12"
                     VerticalContentAlignment="Center"
                     Margin="5"/>
            
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <TextBlock Text="{Binding SelectedFiles.Count, StringFormat='Selected: {0}'}"
                           VerticalAlignment="Center"
                           Margin="10,0"/>
            </StackPanel>
        </Grid>
        
        <!-- File List -->
        <Border Grid.Row="2" 
                BorderBrush="Gray" 
                BorderThickness="1"
                Margin="0,0,0,10">
            <Grid>
                <DataGrid x:Name="FileGrid"
                          ItemsSource="{Binding Files}"
                          SelectedItem="{Binding SelectedFile}"
                          AutoGenerateColumns="False"
                          SelectionMode="Extended"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="LightGray"
                          CanUserSortColumns="True"
                          MouseDoubleClick="FileGrid_MouseDoubleClick"
                          SelectionChanged="FileGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Type" Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding IsDirectory, Converter={StaticResource FileIconConverter}}"
                                               FontSize="20"
                                               HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Header="Name" 
                                          Binding="{Binding Name}" 
                                          Width="*"
                                          FontWeight="Bold"/>
                        
                        <DataGridTextColumn Header="Extension" 
                                          Binding="{Binding Extension}" 
                                          Width="80"/>
                        
                        <DataGridTextColumn Header="Size" 
                                          Binding="{Binding Size, Converter={StaticResource FileSizeConverter}}" 
                                          Width="100"/>
                        
                        <DataGridTextColumn Header="Modified" 
                                          Binding="{Binding ModifiedDate, StringFormat='yyyy-MM-dd HH:mm'}" 
                                          Width="140"/>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Loading Overlay -->
                <Border Background="#80FFFFFF" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
                    <StackPanel HorizontalAlignment="Center" 
                              VerticalAlignment="Center">
                        <TextBlock Text="Loading..." 
                                 FontSize="20" 
                                 FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Operations Panel -->
        <Expander Grid.Row="3" 
                  Header="Batch Operations" 
                  IsExpanded="True"
                  Margin="0,0,0,10">
            <StackPanel Margin="10">
                <TextBlock Text="Available Operations:" 
                           Style="{StaticResource HeaderText}"/>
                
                <WrapPanel Margin="5">
                    <Button Content="📝 Rename" 
                            ToolTip="Add rename operation to pipeline"
                            Click="AddRenameOperation_Click"/>
                    <Button Content="📂 Move" 
                            ToolTip="Add move operation to pipeline"
                            Click="AddMoveOperation_Click"/>
                    <Button Content="🔍 Filter" 
                            ToolTip="Add filter operation to pipeline"
                            Click="AddFilterOperation_Click"/>
                    <Button Content="🗑️ Clear Pipeline" 
                            Click="ClearPipeline_Click"/>
                </WrapPanel>
                
                <Separator Margin="0,10"/>
                
                <StackPanel Orientation="Horizontal">
                    <Button Content="▶️ Execute Pipeline" 
                            Command="{Binding ExecutePipelineCommand}"
                            Background="LightGreen"/>
                    <Button Content="👁️ Preview" 
                            Command="{Binding PreviewPipelineCommand}"
                            Background="LightBlue"/>
                    <Button Content="❌ Clear Selection" 
                            Command="{Binding ClearSelectionCommand}"/>
                </StackPanel>
            </StackPanel>
        </Expander>
        
        <!-- Preview/Results Panel -->
        <Border Grid.Row="4" 
                BorderBrush="Gray" 
                BorderThickness="1">
            <TabControl x:Name="ResultsTabControl">
                <!-- Preview/Results Tab -->
                <TabItem Header="📋 Preview / Results">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" 
                                   Text="Preview / Results" 
                                   Style="{StaticResource HeaderText}"
                                   Background="LightGray"
                                   Padding="5"/>
                        
                        <ListView Grid.Row="1" 
                                  ItemsSource="{Binding PreviewChanges}"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Type" 
                                                  DisplayMemberBinding="{Binding Type}" 
                                                  Width="80"/>
                                    <GridViewColumn Header="Original" 
                                                  DisplayMemberBinding="{Binding OriginalPath}" 
                                                  Width="350"/>
                                    <GridViewColumn Header="New" 
                                                  DisplayMemberBinding="{Binding NewPath}" 
                                                  Width="350"/>
                                    <GridViewColumn Header="Description" 
                                                  DisplayMemberBinding="{Binding Description}" 
                                                  Width="200"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </TabItem>
                
                <!-- Pipeline Queue Tab -->
                <TabItem Header="⚙️ Pipeline Queue">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" 
                                    Orientation="Horizontal" 
                                    Background="LightGray"
                                    Margin="0">
                            <TextBlock Text="Pipeline Queue - Double-click to edit, drag to reorder" 
                                       Style="{StaticResource HeaderText}"
                                       Padding="5"/>
                        </StackPanel>
                        
                        <ListBox x:Name="PipelineQueueList"
                                 Grid.Row="1"
                                 ItemsSource="{Binding PipelineOperations}"
                                 AllowDrop="True"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 MouseDoubleClick="PipelineQueueList_MouseDoubleClick"
                                 PreviewMouseLeftButtonDown="PipelineQueueList_PreviewMouseLeftButtonDown"
                                 PreviewMouseMove="PipelineQueueList_PreviewMouseMove"
                                 Drop="PipelineQueueList_Drop"
                                 DragOver="PipelineQueueList_DragOver">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="Margin" Value="2"/>
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="LightGray"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="LightBlue"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E8F4FD"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Order Number -->
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Order, StringFormat='#{0}'}"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   Foreground="Gray"/>
                                        
                                        <!-- Icon -->
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Icon}"
                                                   FontSize="20"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                        
                                        <!-- Operation Info -->
                                        <StackPanel Grid.Column="2" 
                                                    VerticalAlignment="Center"
                                                    Margin="10,0">
                                            <TextBlock Text="{Binding DisplayName}"
                                                       FontWeight="Bold"
                                                       FontSize="14"/>
                                            <TextBlock Text="{Binding Description}"
                                                       FontSize="11"
                                                       Foreground="Gray"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                        
                                        <!-- Delete Button -->
                                        <Button Grid.Column="3"
                                                Content="❌"
                                                ToolTip="Remove from pipeline"
                                                Click="DeletePipelineOperation_Click"
                                                Tag="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="8,4"
                                                FontSize="14"
                                                Cursor="Hand"
                                                VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        
                        <!-- Empty State -->
                        <TextBlock Grid.Row="1"
                                   Text="No operations in pipeline. Add operations using the buttons above."
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="Gray"
                                   FontStyle="Italic"
                                   Visibility="{Binding PipelineOperations.Count, Converter={StaticResource BoolToVisConverter}, ConverterParameter=Invert}"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="5" Margin="0,5,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" 
                           FontWeight="Bold"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding Files.Count, StringFormat='Files: {0}'}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
